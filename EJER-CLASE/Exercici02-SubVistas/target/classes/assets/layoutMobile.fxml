<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.ControllerMobile">

    <children>
        <VBox spacing="0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <HBox prefHeight="65" style="-fx-background-color: #e74c3c;" alignment="CENTER_LEFT">
                <children>
                    <ImageView fx:id="backArrow" fitHeight="28.0" fitWidth="28.0"
                               pickOnBounds="true" preserveRatio="true"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <StackPane alignment="CENTER">
                        <Text fx:id="headerTitle" fill="WHITE" text="N-DB Mobile">
                            <font>
                                <Font name="Arial Bold" size="26.0"/>
                            </font>
                        </Text>
                    </StackPane>

                    <Region HBox.hgrow="ALWAYS"/>
                </children>
                <padding>
                    <Insets top="15" bottom="15" left="20" right="20"/>
                </padding>
            </HBox>

            <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background-color: #ecf0f1;" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="mainContent" spacing="12" alignment="TOP_CENTER">
                        <padding>
                            <Insets top="15" bottom="15" left="15" right="15"/>
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>