<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="460.0" prefWidth="600.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.Controller">
   <children>
      <VBox prefHeight="448.0" prefWidth="600.0" spacing="10.0">
         <children>
            <!-- HEADER -->
            <Label alignment="CENTER" prefHeight="64.0" prefWidth="600.0"
                   style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-border-radius: 0 0 16 16; -fx-background-radius: 0 0 16 16;"
                   text="IETI" textAlignment="CENTER">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>

            <!-- CHAT SCROLL -->
            <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" fitToWidth="true"
                        prefHeight="368.0" prefWidth="580.0"
                        style="-fx-background-color: #ffffff; -fx-border-radius: 12; -fx-background-radius: 12; -fx-border-color: #cbd6e2; -fx-border-width: 2;">
               <content>
                  <VBox fx:id="responseBox" prefWidth="550.0" spacing="8.0" />
               </content>
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
            </ScrollPane>

            <!-- INPUT BAR -->
            <HBox prefHeight="60.0" prefWidth="600.0" spacing="8.0" style="-fx-padding: 0 16 0 16;">
               <children>
                  <TextField fx:id="textPrompt" onAction="#processCall"
                             prefHeight="40.0" prefWidth="500.0"
                             promptText="Escribe un mensaje..."
                             style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #4a90e2; -fx-border-width: 2; -fx-background-color: #eaf1fb;">
                     <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                     </padding>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>

                  <!-- Adjuntar -->
                  <ImageView fx:id="btnAddImage" fitHeight="28.0" fitWidth="28.0"
                             onMouseClicked="#addImage" pickOnBounds="true" preserveRatio="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>

                  <!-- Stop -->
                  <Rectangle fx:id="btnStopResponse" arcHeight="6.0" arcWidth="6.0" fill="#ff6b6b"
                             height="28.0" onMouseClicked="#cancelCall"
                             stroke="#e74c3c" strokeType="INSIDE"
                             visible="false" width="28.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Rectangle>

                  <!-- Enviar -->
                  <ImageView fx:id="btnSubmitPrompt" fitHeight="28.0" fitWidth="28.0"
                             onMouseClicked="#processCall" pickOnBounds="true" preserveRatio="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
